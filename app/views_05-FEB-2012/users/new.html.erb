<% @page_title = "users : sign up" %>

<div class="contentpaneopen">
    <div class="contentheading">Get Started</div>
</div>

<div class="contentpaneopen">
    <div class="list_table">
        <div class="list_table_row">
            <div class="list_table_cell_single">
                <% form_for :user, @user, :url => { :action => "create" }, :html => { :multipart => true } do |f| %>
                    <%= f.error_messages %>
                    <fieldset>
                        <%= f.label :first_name, "First Name: " %>
                        <%= f.text_field :first_name, :class => "text_field", :size => 20, :maxlength => 50 %>
                    </fieldset>
                    <fieldset>
                        <%= f.label :last_name, "Last Name: " %>
                        <%= f.text_field :last_name, :class => "text_field", :size => 20, :maxlength => 50 %>
                    </fieldset>
                    <fieldset>
                        <%= f.label :email, "E-mail: " %>
                        <%= f.text_field :email, :class => "text_field", :size => 20, :maxlength => 100 %>
                    </fieldset>
                    <fieldset>
                        <%= f.label :password, "Password: " %>
                        <%= f.password_field :password, :class => "text_field", :size => 20, :maxlength => 50 %>
                    </fieldset>
                    <fieldset>
                        <%= f.label :password_confirmation, "Confirm Password: " %>
                        <%= f.password_field :password_confirmation, :class => "text_field", :size => 20, :maxlength => 50 %>
                    </fieldset>
                    <fieldset>
                        <label>&nbsp;</label>
                        <%= f.submit "Sign Up" %>
                    </fieldset>
                <% end %>
            </div>
        </div>
    </div>
</div><br />
